@using Final2_TibaAljaqobi.Entities
@{
    ViewBag.Title = "Show All Employees";
}

<h1>Show All Employees</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Joining Date</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.JoiningDate.ToShortDateString()</td>
                <td>@s.Salary</td>
                <td>@s.Department?.DepartmentName</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@s.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteEmployee" asp-route-id="@s.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
