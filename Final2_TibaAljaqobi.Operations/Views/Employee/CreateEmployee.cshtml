@model Final2_TibaAljaqobi.Entities.Employee

@{
    ViewData["Title"] = "Create an Employee";
}

<h1 class="mb-4">Create an Employee</h1>

@using (Html.BeginForm("CreateEmployee", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group mb-3">
        @Html.LabelFor(s => s.Id, "Employee ID", new { @class = "form-label" })
        @Html.TextBoxFor(s => s.Id, new { @class = "form-control", placeholder = "Enter employee ID" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(s => s.Name, "Employee Name", new { @class = "form-label" })
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control", placeholder = "Enter employee name" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(s => s.JoiningDate, "Joining Date", new { @class = "form-label" })
        @Html.TextBoxFor(s => s.JoiningDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(s => s.Salary, "Salary", new { @class = "form-label" })
        @Html.TextBoxFor(s => s.Salary, new { @class = "form-control", placeholder = "Enter salary amount" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(s => s.DepartmentId, "Department", new { @class = "form-label" })
        @Html.DropDownListFor(s => s.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.AllDepartments, "Select Department", new { @class = "form-select" })
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Add New Employee" class="btn btn-primary" />
        <a asp-action="ShowEmployee" class="btn btn-secondary ms-2">Cancel</a>
    </div>
}
