@model Final2_TibaAljaqobi.Entities.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form asp-action="EditEmployee" method="post">
    <div class="form-group">
        <label>Employee ID</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Employee Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Joining Date</label>
        <input asp-for="JoiningDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Salary</label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" asp-items="ViewBag.AllDepartments" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ShowEmployee" class="btn btn-secondary">Cancel</a>
</form>
